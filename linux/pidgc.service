[Unit]
Description=Starts PiDGC
DefaultDependencies=false

[Service]
 Type = forking
 Restart=always
 RestartSec=1
 SuccessExitStatus=143
 ExecStart = /usr/local/bin/pidgc.sh start
 ExecStop = /usr/local/bin/pidgc.sh stop
 ExecReload = /usr/local/bin/pidgc.sh reload

[Install]
 WantedBy=multi-user.target
